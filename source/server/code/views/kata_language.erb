<script>
'use strict';
$(() => {

  const urlParam = (name) => {
    const results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.search);
    return (results !== null) ? results[1] || 0 : false;
  };

  $('button#ok').click(() => {
    const exerciseName = urlParam('exercise_name');
    const displayName = encodeURIComponent(cd.selectedDisplayName);
    const params = `exercise_name=${exerciseName}&language_name=${displayName}`;
    window.location = `<%= @next_url %>?${params}`;
  });

});
</script>

